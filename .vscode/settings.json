{
    // File exclusions
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.egg-info": true,
        "**/.venv": true,
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        "**/dist": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/htmlcov": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.pytest_cache/**": true,
        "**/__pycache__/**": true
    },

    // Python configuration
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.linting.enabled": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.terminal.activateEnvironment": true,

    // Pytest configuration
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests",
        "-v",
        "--strict-markers",
        "--tb=short"
    ],

    // Ruff configuration (linter & formatter)
    // Note: Using native Ruff server (v0.5.3+)
    // Ruff config (line-length, rules, etc.) is read from pyproject.toml
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },

    // Pylance configuration (type checking & IntelliSense)
    "pylance.disableLanguageServices": false,
    "pylance.typeCheckingMode": "strict",
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportPrivateUsage": "warning",
        "reportOptionalMemberAccess": "warning"
    },

    // Editor settings
    "editor.rulers": [80, 120],
    "editor.wordWrap": "on",
    "editor.formatOnPaste": true,
    "editor.trimAutoWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,

    // Coverage visualization
    "coverage-gutters.coverageFileNames": [
        "coverage.xml",
        ".coverage",
        "coverage.json"
    ],

    // Search exclusions
    "search.exclude": {
        "**/__pycache__": true,
        "**/node_modules": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        "**/htmlcov": true,
        "**/.venv": true
    },

    // Workspace settings
    "files.eol": "\n",
    "files.encoding": "utf8"
}
